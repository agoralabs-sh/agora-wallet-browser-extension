{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "alwaysStrict": true,
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "paths": {
      "@common/enums": ["src/common/enums"],
      "@common/errors": ["src/common/errors"],
      "@common/events": ["src/common/events"],
      "@common/types": ["src/common/types"],
      "@common/utils": ["src/common/utils"],
      "@extension/components/*": ["src/extension/components/*"],
      "@extension/config": ["src/extension/config"],
      "@extension/constants": ["src/extension/constants"],
      "@extension/enums": ["src/extension/enums"],
      "@extension/errors": ["src/extension/errors"],
      "@extension/features/accounts": ["src/extension/features/accounts"],
      "@extension/features/assets": ["src/extension/features/assets"],
      "@extension/features/messages": ["src/extension/features/messages"],
      "@extension/features/networks": ["src/extension/features/networks"],
      "@extension/features/registration": [
        "src/extension/features/registration"
      ],
      "@extension/features/sessions": ["src/extension/features/sessions"],
      "@extension/features/settings": ["src/extension/features/settings"],
      "@extension/features/system": ["src/extension/features/system"],
      "@extension/features/transactions": [
        "src/extension/features/transactions"
      ],
      "@extension/fonts/*": ["src/extension/fonts/*"],
      "@extension/hooks/*": ["src/extension/hooks/*"],
      "@extension/pages/*": ["src/extension/pages/*"],
      "@extension/selectors": ["src/extension/selectors"],
      "@extension/services": ["src/extension/services"],
      "@extension/theme": ["src/extension/theme"],
      "@extension/translations": ["src/extension/translations"],
      "@extension/types": ["src/extension/types"],
      "@extension/utils": ["src/extension/utils"],
      "@external/constants": ["src/external/constants"],
      "@external/services": ["src/external/services"],
      "@external/types": ["src/external/types"]
    },
    "removeComments": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "strictBindCallApply": false,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "suppressImplicitAnyIndexErrors": true,
    "target": "ES5"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/**/*.test.*"]
}
