{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "alwaysStrict": true,
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "paths": {
      "@common/constants": ["src/common/constants"],
      "@common/enums": ["src/common/enums"],
      "@common/errors": ["src/common/errors"],
      "@common/messages": ["src/common/messages"],
      "@common/types": ["src/common/types"],
      "@common/utils/*": ["src/common/utils/*"],
      "@extension/components/*": ["src/extension/components/*"],
      "@extension/config": ["src/extension/config"],
      "@extension/constants": ["src/extension/constants"],
      "@extension/contracts/*": ["src/extension/contracts/*"],
      "@extension/enums": ["src/extension/enums"],
      "@extension/errors": ["src/extension/errors"],
      "@extension/events": ["src/extension/events"],
      "@extension/features/*": ["src/extension/features/*"],
      "@extension/fonts/*": ["src/extension/fonts/*"],
      "@extension/hooks/*": ["src/extension/hooks/*"],
      "@extension/images/*": ["src/extension/images/*"],
      "@extension/modals/*": ["src/extension/modals/*"],
      "@extension/models/*": ["src/extension/models/*"],
      "@extension/pages/*": ["src/extension/pages/*"],
      "@extension/repositories/*": ["src/extension/repositories/*"],
      "@extension/routers/*": ["src/extension/routers/*"],
      "@extension/selectors": ["src/extension/selectors"],
      "@extension/services/*": ["src/extension/services/*"],
      "@extension/styles/*": ["src/external/styles/*"],
      "@extension/theme": ["src/extension/theme"],
      "@extension/translations": ["src/extension/translations"],
      "@extension/types": ["src/extension/types"],
      "@extension/utils/*": ["src/extension/utils/*"],
      "@external/constants": ["src/external/constants"],
      "@external/services/*": ["src/external/services/*"],
      "@external/types": ["src/external/types"],
      "@external/utils/*": ["src/external/utils/*"],
      "@test/utils/*": ["test/utils/*"]
    },
    "removeComments": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "strictBindCallApply": false,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "suppressImplicitAnyIndexErrors": true,
    "target": "ES5"
  }
}
